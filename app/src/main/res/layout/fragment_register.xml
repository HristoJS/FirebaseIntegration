<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext="com.evilcorp.firebaseintegration.register.RegisterFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/email_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/repeat_email_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_repeat_email"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/email_edittext"
            app:layout_constraintTop_toBottomOf="@+id/email_edittext"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/email_edittext"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_password"
            android:textSize="15sp"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/repeat_email_edittext"
            app:layout_constraintTop_toBottomOf="@+id/repeat_email_edittext"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/repeat_email_edittext"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/repeat_password_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_repeat_password"
            android:imeActionId="@+id/login"
            android:textSize="15sp"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/password_edittext"
            app:layout_constraintTop_toBottomOf="@+id/password_edittext"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/password_edittext"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/name_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_name"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/repeat_password_edittext"
            app:layout_constraintTop_toBottomOf="@+id/repeat_password_edittext"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/repeat_password_edittext"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/country_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_country"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/name_edittext"
            app:layout_constraintTop_toBottomOf="@+id/name_edittext"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/name_edittext"/>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/add_picture_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add_picture_button"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/country_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/fragment_register_button"
            android:layout_margin="@dimen/default_margin"/>

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:contentDescription="@string/userAvatar"-->
            <!--android:id="@+id/welcome_picture"-->
            <!--tools:layout_conversion_absoluteX="0dp"-->
            <!--tools:layout_conversion_absoluteY="315dp"-->
            <!--tools:layout_conversion_absoluteWidth="0dp"-->
            <!--tools:layout_conversion_absoluteHeight="0dp"-->
            <!--tools:layout_editor_absoluteY="315dp"-->
            <!--tools:layout_editor_absoluteX="0dp"/>-->


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_register_button"
            style="?android:textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_register"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/add_picture_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_edittext"
            android:layout_margin="@dimen/default_margin"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
