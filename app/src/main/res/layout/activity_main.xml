<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evilcorp.firebaseintegration.main.MainActivity">
    <com.evilcorp.firebaseintegration.ExpandablePanel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandablePanel"
        app:animationDuration="200"
        app:minHeight="35dp"
        app:handle="@+id/handle"
        app:content="@+id/userPanel"
        android:orientation="vertical"
        >
        <include
            layout="@layout/user_panel"
            android:layout_marginTop="@dimen/user_panel_margin"
            android:layout_marginStart="@dimen/user_panel_margin"
            android:id="@id/userPanel"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            />
        <ImageButton
            android:id="@id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_drag_handle_black_24px"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"/>
        <include
            layout="@layout/separator"
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/userPanel" />
    </com.evilcorp.firebaseintegration.ExpandablePanel>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_items">
    </android.support.design.widget.BottomNavigationView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottomNavigationView"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
    <FrameLayout
        android:id="@+id/fragment_placeholder"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/expandablePanel"
        android:layout_above="@id/bottomNavigationView">
    </FrameLayout>
</RelativeLayout>