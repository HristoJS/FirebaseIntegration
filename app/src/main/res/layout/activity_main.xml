<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.evilcorp.firebaseintegration.main.MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPanel"
        style="?android:attr/buttonBarStyle">
        <Button
            android:id="@+id/chat_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@drawable/ic_chat_black_24px"
            android:layout_margin="@dimen/button_margin"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:id="@+id/address_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@drawable/ic_location_city_black_24px"
            android:layout_margin="@dimen/button_margin"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:id="@+id/settings_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@drawable/ic_settings_black_24px"
            android:layout_margin="@dimen/button_margin"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:id="@+id/invite_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@drawable/ic_person_add_black_24px"
            android:layout_margin="@dimen/button_margin"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:id="@+id/share_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@drawable/ic_share_black_24px"
            android:layout_margin="@dimen/button_margin"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:id="@+id/logout_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_margin="@dimen/button_margin"
            android:background="@drawable/ic_logout_black_24px"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>
    <include layout="@layout/separator"
        android:id="@id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/buttonPanel" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_msg"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/separator"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/welcome_msg"
        android:contentDescription="@string/welcome_image"
        android:id="@+id/image"/>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
